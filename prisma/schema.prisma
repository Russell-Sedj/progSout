generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model etudiant {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now()) @db.DateTime(0)
  updated_at DateTime? @updatedAt

  nom       String
  prenom    String
  email     String         @unique
  password  String
  telephone Int
  service   serviceExamen? @relation(fields: [serviceExamenId], references: [id])

  filiere            String?
  theme              String?
  maitre             maitreMemoire? @relation(fields: [maitreMemoireId], references: [id])
  date_presentation  DateTime?
  salle_presentation String?
  verdict            String?

  scolarite_paye Boolean?
  memoire_depose Boolean?
  theme_accepte  Boolean?
  valide_UE      Boolean?

  serviceExamenId String?
  maitreMemoireId String?
}

model maitreMemoire {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now()) @db.DateTime(0)
  updated_at DateTime? @updatedAt

  nom       String
  prenom    String
  email     String? @unique
  telephone Int?

  etudiant etudiant[]
}

model serviceExamen {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now()) @db.DateTime(0)
  updated_at DateTime? @updatedAt
  email      String    @unique
  password   String

  etudiant etudiant[]
}
