generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model etudiant {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now()) @db.DateTime(0)
  updated_at DateTime? @updatedAt

  nom       String
  prenom    String
  email     String          @unique
  password  String
  telephone Int
  service   service_examen? @relation(fields: [service_examenId], references: [id])

  filiere            String?
  theme              String?
  encadrant          maitre_memoire? @relation(fields: [maitre_memoireId], references: [id])
  date_presentation  DateTime?
  salle_presentation String?
  verdict            String?

  scolarite_paye Boolean?
  memoire_depose Boolean?
  theme_accepte  Boolean?
  valide_UE      Boolean?

  service_examenId String?
  maitre_memoireId String?
}

model maitre_memoire {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now()) @db.DateTime(0)
  updated_at DateTime? @updatedAt

  nom      String
  prenom   String
  email    String     @unique
  etudiant etudiant[]
}

model service_examen {
  id         String     @id @default(cuid())
  created_at DateTime   @default(now()) @db.DateTime(0)
  updated_at DateTime?  @updatedAt
  email      String     @unique
  password   String
  etudiant   etudiant[]
}
